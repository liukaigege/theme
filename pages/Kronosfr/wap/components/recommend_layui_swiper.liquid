<style>
  #recommend-section_layui_swiper {
    margin-top: .5rem;
  }

  #recommend-section_layui_swiper h3 {
    font-size: .16rem;
    font-weight: 400;
    color: #363636;
    text-align: center;
    margin-bottom: .15rem;
    margin-top: .2rem;
    text-transform: capitalize;
  }

  #recommend-section_layui_swiper .swiper-slide {
    width: 1.64rem !important;
    text-align: center;
    background: #FFFFFF;
    box-shadow: 0px 2px 15px 0px rgba(0, 0, 0, 0.07);
    border-radius: 1px;
  }

  #recommend-section_layui_swiper .swiper-slide a {
    display: block;
    width: 100%;
    height: 100%;
  }

  #recommend-section_layui_swiper .cover_wrap {
    width: 100%;
    padding-bottom: 100% !important;
    position: relative;
    margin: 0 auto;
    overflow: hidden;
  }

  #recommend-section_layui_swiper .cover {
    -o-object-fit: contain;
    object-fit: contain;
    position: absolute;
    width: auto;
    height: auto;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    max-width: 100%;
    max-height: 100%;
  }

  #recommend-section_layui_swiper .m_title {
    font-size: 0.1rem;
    color: #303133;
    padding: 0 0.06rem;
    line-height: 2;
    padding-top: 2px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    text-align: center;
  }

  #recommend-section_layui_swiper .price {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    line-height: 1;
    padding-bottom: 0.05rem;
    height: .3rem;
  }

  #recommend-section_layui_swiper .now_price {
    font-size: 0.12rem;
    font-weight: 600;
    color: #000000;
    padding: 0 0 0.04rem;
    line-height: 1;
  }

  #recommend-section_layui_swiper .old_price {
    font-size: 0.1rem;
    font-weight: 400;
    color: #9B9B9B;
    line-height: 1;
    text-decoration: line-through;
    position: relative;
    top: -0.02rem;
  }

  #recommend-section_layui_swiper .old_price+.now_price {
    padding-left: 0.05rem !important;

  }

  #recommend-section_layui_swiper .swiper-container {
    padding-bottom: 0.16rem;
  }

  .product_red.row .m_title {
    font-size: 0.2rem;
  }

  .product_red.row .old_price,
  .product_red.row .now_price {
    font-size: 0.2rem;
  }

  .product_red.row .now_price .hide {
    display: none;
  }

  #recommend-section_layui_swiper .free_shipping {
    z-index: 1;
    left: 0;
    bottom: 0;
    background: #6A2117;
    border-radius: 0px 0px 0px 1px;
    font-weight: bold;
    font-size: 0.1rem;
    display: inline-block;
    color: #FFFFFF;
    line-height: 1;
    padding: 0.04rem;
    margin-top: .06rem;
    border-radius: 0.12rem 0 0.12rem 0;
  }

  #recommend-section_layui_swiper .off {
    background: #6A2117;
    color: #ffffff;
    flex-wrap: wrap;
    text-align: center;
    overflow: hidden;
    z-index: 2;
    padding: 0.01rem 0.04rem 0;
    display: inline-block;
    width: 0.28rem;
    height: 0.28rem;
    border-radius: 50%;
    position: absolute;
    right: 0;
    top: 0;
  }

  #recommend-section_layui_swiper .off em:first-child {
    font-size: 0.12rem;
    display: inline-block;
    line-height: 1;
    font-style: normal;
    font-style: normal;
    font-size: 0.1rem;
    position: absolute;
    height: 0.14rem;
    top: 0.05rem;
    left: 50%;
    transform: translate(-50%, 0);
  }

  #recommend-section_layui_swiper .off em:first-child i {
    font-weight: bold;
  }

  #recommend-section_layui_swiper .off em:last-child {
    font-size: 0.08rem;
    font-style: normal;
    height: 0.14rem;
    display: inline-block;
    position: absolute;
    top: 0.14rem;
    left: 50%;
    transform: translate(-50%, 0);
  }

  .discount_wrap {
    position: absolute;
    right: 0;
    left: 0;
    top: .1rem;
    z-index: 99;
    text-align: left;
  }

  #recommend-section_layui_swiper .main_color {
    color: #6A2117 !important
  }
</style>
<div id="recommend-section_layui_swiper">
