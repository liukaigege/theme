<style>

  #confirm-mask {
    display: none;
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 9999;
    background-color: rgba(0, 0, 0, .3);
  }


  #alert-box {
    max-width: 400px;
    position: fixed;
    z-index: 5000;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
  }

  .alerts{
    background-color: #fff;
    border: 1px solid #d3d4d3;
    opacity:0;
    transform: scale(0);
    padding: 14px;
    display: flex;
    align-items: center;
    line-height: 1;
    margin-bottom: 10px;
    border-radius: 4px;
    transition: all .3s;
  }

  .alerts span{
    word-break: break-all;
    word-wrap: break-word;
  }

  .alerts .icon{
    margin-right: 10px;
  }

  .alerts .text{
    flex: 1;
  }

  .alerts-show{
    transform: scale(1);
  }

 #confirm-mask .modal-header {
    padding: 0.5rem 1rem;
  }

  #confirm-mask .modal-footer{
    padding:  0.5rem 1rem;
  }

  #confirm-mask .modal-content {
    border: unset;
  }

  #confirm-mask .modal-body {
    min-height: 80px;
    display: flex;
    align-items: center;
  }

  .icon-success{
    font-size: 30px;
    color:#39d343;
  }

  .icon-warning{
    font-size: 30px;
    color:#eeca01;
  }

  .icon-danger{
    font-size: 30px;
    color:red;
  }

  /* 轻量弹框 */
  .toast{
    width: 400px;
    z-index: 99999;
    opacity: 0;
    display: none;
    position: fixed;
    top: 50%;
    left:50%;
    transform: translate(-50%,-50%);
  }

  .toast .close{
    font-weight: unset;
  }

  .toast .mr-auto{
    color: #000;
  }


  @media (max-width:992px) {
    .alerts .text{
      min-width: 180px;
    }
    .toast{
      width: 250px;
    }
  }
</style>
<!-- 轻量弹框 -->
<div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
  <div class="toast-header">
    <strong class="mr-auto"></strong>
    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="toast-body">
  </div>
</div>
<!-- 警告框 -->
<div id="alert-box">

</div>

<!-- 对话框 -->
<div id="confirm-mask">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" id="confirm-box">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"></h5>
        <button type="button" class="close" id="confirm-close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary btn-sm cancel" data-dismiss="modal"></button>
        <button type="button" class="btn btn-primary btn-sm determine"></button>
      </div>
    </div>
  </div>
</div>
