<style type="text/css">
  #recommend-section_cart_layui_swiper h3 span {
    font-size: 30px;
    font-weight: 400;
    color: #363636;
    text-align: center;
    display: inline-block;
    padding: 0 16px;
    position: relative;
    z-index: 9;
    background-color: #fff;
  }

  #recommend-section_cart_layui_swiper h3 {
    position: relative;
    margin-bottom: 30px;
    margin-top: 60px;
    text-align: center;
    font-size: 18px;
  }


  #recommend-section_cart_layui_swiper .swiper-slide {
    text-align: center;
    background: #FFFFFF;
    box-shadow: 0px 2px 15px 0px rgba(0, 0, 0, 0.07);
    border-radius: 1px;
  }

  #recommend-section_cart_layui_swiper .swiper-slide a {
    width: 100%;
    height: 100%;
    display: block;
  }

  #recommend-section_cart_layui_swiper .cover_wrap {
    width: 100%;
    padding-bottom: 100% !important;
    position: relative;
    margin: 0 auto;
    overflow: hidden;
  }

  #recommend-section_cart_layui_swiper .cover {
    -o-object-fit: contain;
    object-fit: contain;
    position: absolute;
    width: auto;
    height: auto;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    max-width: 100%;
    max-height: 100%;
  }

  #recommend-section_cart_layui_swiper .m_title {
    font-size: 12px;
    color: #303133;
    padding: 0 6px;
    line-height: 2;
    padding-top: 2px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    text-align: center;
    margin-top: 5px;
  }

  #recommend-section_cart_layui_swiper .price {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    line-height: 1;
    padding-bottom: 5px;
    height: 30px;
  }

  #recommend-section_cart_layui_swiper .now_price {
    font-size: 12px;
    font-family: Roboto-Regular, Roboto;
    font-weight: 600;
    color: #000000;
    padding: 0 0 4px;
    line-height: 1;
  }

  #recommend-section_cart_layui_swiper .old_price {
    font-size: 10px;
    font-family: Roboto-Regular, Roboto;
    font-weight: 400;
    color: #9B9B9B;
    line-height: 1;
    text-decoration: line-through;
    position: relative;
  }

  #recommend-section_cart_layui_swiper .old_price+.now_price {
    padding-left: 5px !important;
    color: #721A11FF
  }

  #recommend-section_cart_layui_swiper .old_price.hide+.now_price {
    color: #000;
  }

  #recommend-section_cart_layui_swiper .swiper-container {
    padding-bottom: 16px;
    margin: 0 20px;
    width: calc(100% - 40px);
  }
</style>
<div id="recommend-section_cart_layui_swiper">
  {% if isShow %}
  <h3>You May Also Like</h3>
  {% endif %}
  <div class="swiper-container newProducts_details" id='recommend_cart_layui_swiper'>
  </div>
</div>
{% raw %}
<script id='recommend_cart_template' type="text/html">
    <div class="swiper-wrapper">
      {{#  layui.each(d, function(index, item){ }}
      <div class="swiper-slide">
        <a onclick="toJump('productDetail_{{item.id}}.html')" data-toJump="productDetail_{{item.id}}.html">
          <div class="cover_wrap">
              {{# if(item.freeShipping != 0){ }}
            <div class="free_shipping">
              Free Shipping
            </div>
            {{# } }}
            {{# if(item.defaultPrice && item.defaultPrice < item.originalPrice){ }}
                 <div class="off">
                    <em><i></i>%</em>
                    <em>OFF</em>
                 </div>
            {{# } }}
            <img class="cover {{# if(item.otherImg != '' && item.otherImg != null){ }}mainRelationListImg {{# } }}" src="" data-suffix-img="{{item.mainImg}}" alt="">
            {{# if(item.otherImg != '' && item.otherImg != null){ }}
            <img class="associateRelationListImg cover" src="" data-suffix-img="{{item.otherImg}}" alt="">
            {{# } }}
            </div>
          <p class="m_title">{{item.goodsName}}</p>
          <div class="price" data-price="{{item.defaultPrice}}" data-originalPrice='{{item.originalPrice}}'>
            <span class="old_price hide"></span>
            <span class="now_price"></span>
          </div>
        </a>
      </div>
      {{# }) }}
    </div>
</script>
{% endraw %}