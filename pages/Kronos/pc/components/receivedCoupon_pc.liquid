<!-- 领取成功 -->
<section>
  <div class="received">
    <div class="close" id="received-close"></div>
    <div class="received-header">
      <p class="title">CONGRATULATIONS!</p>
      <p class="tip"> Received Successfully.<br>Discounts will be added automatically when you checkout.</p>
    </div>
    <div class="received-footer">
      <div class="submit" id="goShop">GO SHOPPING</div>
    </div>
  </div>
</section>
<script>
  $('#goShop').on('click', function () {
    $('.received').fadeOut(300)
    $('#coupon-modal').fadeOut(300)
  })
  // 关闭弹框
  $('#received-close').on('click', function () {
    $('.received').fadeOut(300)
    $('#coupon-modal').fadeOut(300)
  })
</script>