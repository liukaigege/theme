<style>
  .received {
    display: none;
    width: 507px;
    height: 400px;
    background: #FFFFFF;
    box-shadow: 0px 33px 33px 0px rgba(0, 0, 0, 0.08);
    border-radius: 5px;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 999;

  }

  .received-header {
    width: 100%;
    height: 288px;
    background: #CCCCCC;
    background-image: url('../assets/pc/images/couponbg@2x.png');
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    overflow: hidden;
  }

  .received-header .title {
    font-size: 41px;
    font-family: Aileron-SemiBold, Aileron;
    font-weight: 600;
    color: #FFFFFF;
    margin: 59px 0;
    text-align: center;
  }

  .received-header .tip {
    font-size: 19px;
    font-family: Aileron-Regular, Aileron;
    font-weight: 400;
    color: #FFFFFF;
    padding: 0 145px;
    text-align: center;
  }

  .received-footer .submit {
    width: 400px;
    height: 58px;
    background: #DF0052;
    border-radius: 5px;
    margin: 27px auto;
    text-align: center;
    line-height: 58px;
    color: #FFFFFF;
    font-size: 22px;
    cursor: pointer;
  }
