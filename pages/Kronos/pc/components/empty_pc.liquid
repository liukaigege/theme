{% assign isshow = showRecommend %}


<style>
  .athena_search_empty {

    text-align: center;
    margin-top: 50px;
    font-family: Roboto-Regular, Roboto;
  }

  .athena_search_empty img {
    width: 208px;
    height: 208px;
  }

  .athena_search_recommend {
    margin-top: 30px;
    margin-bottom: 30px;
  }

  .athena_search_empty .big-font {
    font-size: 16px;
    margin-top: 35px;
    color: #666;
    font-weight: 400;
    line-height: 20px;
  }

  .athena_search_empty .small-font {
    font-size: 14px;
    margin-top: 10px;
    color: #999;
    font-weight: 400;
    line-height: 16px;
  } 

  .athena_search_empty .athena_search_empty_text {
    margin-top: 20px;
  }

  .athena_search_empty .athena_search_empty_text span {
    color: #000000;
  }

  .athena_search_title {
    text-align: center;
    font-size: 14px;
    font-family: Floane-Regular, Floane;
    font-weight: 400;
    color: #363636;
    line-height: 27px;
    margin-bottom: 15px;
  }

  .empty .recommend {
    padding: 0;
  }

  #recommend-empty .swiper-slide {
    width: 513px;
    display: block;
    /* margin-right: 30px; */
  }

  /* .empty .recommend img {
    width: 513px;
    height: auto;
  } */

  .empty .recommend .swiper-button-next,
  .empty .recommend .swiper-button-prev {
    width: 42px;
    height: 42px;
    background-size: contain;
  }

  /* .empty */
</style>
<div class="empty" id="empty" style="display: none;">
  <div class="athena_search_empty">
    <img src="../assets/pc/images/search/search-nothing.png" alt="">

    <p class="big-font">Sorry, no products matched the keyword!</p>
    <p class="small-font">·Use more general terms</p>
    <p class="small-font" style="text-indent: -28px;">·Check your spelling</p>

  </div>
  {% if isshow == true %}
  <section>
    <div class="you-may-also-like" id="recommend-empty" len="3">
      <div class="title">
        <div class="title-line"></div>
        <div class="title-real">You May Also Like</div>
        <div class="title-line"></div>
      </div>
      <div class="you-may-also-like-swiper">
        <div class="swiper-container" id="empty_swiper">
          <div class="swiper-wrapper">

          </div>
        </div>
        <div class="swiper-button-prev like-swiper-prev"></div>
        <div class="swiper-button-next like-swiper-next"></div>
      </div>
    </div>
  </section>
  {% endif %}
</div>