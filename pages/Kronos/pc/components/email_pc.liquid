<style>
  /* 联系我们 */
  .contact {
    width: 100%;
    height: 571px;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    position: relative;
    margin-top: 30px;
    font-family: Floane-Regular, Floane;
  }

  .contactSubmit {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 50%;
    height: 411px;
    margin: 0 auto;
    background: #FFFFFF;
    text-align: center;

  }

  .contact-inner {
    position: relative;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .contact-inner .title {
    /* width: 550px; */
    font-size: 60px;
    margin: 0 auto;
  }

  .contact-inner .tip {
    width: 550px;
    margin: 30px auto;
    font-size: 16px;
    font-weight: 400;
    color: rgba(8, 8, 8, 0.4);
  }

  .contact-inner .inputBox {
    width: 100%;
    height: 40px;
    border-bottom: 2px solid #0A1826;
  }

  .contact-inner .submit {
    margin: 0 auto;
    margin-top: 40px;
    width: 225px;
    height: 58px;
    background: #000000;
    border-radius: 5px;
    line-height: 58px;
    font-size: 22px;
    font-weight: 600;
    font-family: Aileron-SemiBold, Aileron;
    color: #F7F7F7;
    cursor: pointer;

  }

  .submitSuccess {
    display: none;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 50%;
    height: 423px;
    margin: 0 auto;
    background: #FFFFFF;
    text-align: center;
  }

  .submitSuccess-inner {
    position: relative;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .submitSuccess p:first-child {
    font-size: 92px;
    font-weight: 400;
    color: #303133;
  }

  .submitSuccess p:last-child {
    font-size: 51px;
    font-weight: 400;
    color: #000000;
    text-align: center;
    margin: 0 auto;
  }
</style>
<section>
  <div class="contact" id="contactEmail" style="background-image:url({{data.subscribeImg}})">
    <div class="contactSubmit">
      <div class="contact-inner">
        <div class="title">{{data.subscribeWords}}</div>
        <p class="tip">Subscribe to our newsletters.</p>
        <div class="inputBox">
          <input type="text" id="input-email" placeholder="Your email address">
        </div>
        <div class="submit" id="submitEmail"><img src="../assets/pc/images/bianzu.png"
          alt=""></div>
      </div>
    </div>
    <div class="submitSuccess">
      <div class="submitSuccess-inner">
        <p>Thanks for Subscribing!</p>
        <p>We will send special offers and news to you shortly..</p>
      </div>
    </div>
  </div>
</section>
<script>
  $('#submitEmail').on('click', function () {
    if ($('#input-email').val()) {
      submitEmail($('#input-email').val())
    } else {
      alert('Please Enter a valid email address address.')
    }

  })
</script>