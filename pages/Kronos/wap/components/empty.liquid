      <div class="title">You May Also Like</div>
      <div class="line"></div>
    </div>
    <div class="swiper-container" id='recommend_empty'>
      <div class="swiper-wrapper ">

      </div>
    </div>
  </div>
</div>
<script>
  $(function () {
    var recommend_empty_swiper = new Swiper('#recommend_empty', {
      slidesPerView: 'auto',
      spaceBetween: 15,
      // loop: true
    });
  })

</script>